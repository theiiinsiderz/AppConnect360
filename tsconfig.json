{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "expo-router": [
        "./node_modules/expo-router/build/index.d.ts"
      ],
      "@react-navigation/native": [
        "./node_modules/@react-navigation/native/lib/typescript/src/index.d.ts"
      ],
      "react-native-reanimated": [
        "./node_modules/react-native-reanimated/react-native-reanimated.d.ts"
      ],
      "@expo/vector-icons": [
        "./node_modules/@expo/vector-icons/build/Icons.d.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}